{
    "$schema": "https://json.schemastore.org/tsconfig.json",
    "extends": "@tsconfig/strictest/tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },
    "include": ["**/*.ts"]
}
